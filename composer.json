{
    "name": "codexproject/core",
    "description": "Core components of Codex, a Laravel powered Markdown documentation application.",
    "keywords": ["codex", "laravel", "markdown", "documentation"],
    "license": "MIT",
    "require": {
        "laravel/framework": "~4.2",
        "erusev/parsedown": "~1.0",
        "guzzlehttp/guzzle": "~5.0"
    },
    "suggest": {
        "kzykhys/git": "Required if you're wanting to use the Git storage driver"
    },
    "autoload": {
        "classmap" : [
            "src/controllers"
        ],
        "psr-0": {
            "Codexproject\\Core": "src/"
        }
    },
    "minimum-stability": "stable"
}
